// must have - main stylus jeet grid system import + rupture

// you can add nib if you want
@import 'nib'
@import 'jeet'
@import 'rupture'

// custom imports
@import 'mixins.import'
@import 'variables.import'

// media queries using rupture mixins:
    // +above(641px)
    // +above(1025px)
    // +above(1441px)
    // +above(1921px)
    // rupture docs: https://github.com/jenius/rupture
// or standard media queries with em or px
    // @media only screen and (min-width: 40.063em) /* min-width 641px */
    // @media only screen and (min-width: 64.063em) /* min-width 1025px */
    // @media only screen and (min-width: 90.063em) /* min-width 1441px */
    // @media only screen and (min-width: 120.063em) /* min-width 1921px */

// uncomment edit function to see grid borders
// edit()

*
    box-sizing border-box
html, body
    padding 0
    margin 0
    height 100%
    font-family: "proxima-nova", "Helvetica Neue", Helvetica, "Sans Serif";

header, footer
    padding padme padme*2
    border-top 3px solid slate
    +above(600px)
        padding padme*1.5 padme*2


header
    background slate
    position fixed
    top 0
    left 0
    width 100%
    z-index 11
    // border-bottom 2px solid black
    // border-top 2px solid black

#main
    min-width 400px

// header section
.header__menu
    ul
        list-style-type none
        margin 0
        padding 0

        li
            display inline-block
            padding 0
            margin 0
            // padding-right rem-calc(10)
            // .fa
            //     // margin-right rem-calc(3)
            //     color white
            //     font-size 1rem
            //     cursor pointer
            //     border-radius 5px
            //     line-height 30px
            //
            //     &:hover
            //         color primary

            &:last-child
                float: right

            .topsocial a
                height 30px
                width 30px
                background #37474F
                line-height 30px
                font-size 1em
                padding 0
                margin 0
                display inline-block
                text-align center
                color white
                border-radius 3px

                &:hover
                    background primary


                i
                    line-height 10px


            .smlogo
                margin 2px 0 0
                padding 0
                height 24px

            a
                margin 0
                padding 0

            .charliefox
                position absolute
                word-spacing: -0.15em;
                font-weight 300
                text-transform uppercase
                font-size 1.25em
                color #90A4AE
                display inline-block
                padding-left 5px
                top 12px
                display none

                +above(600px)
                    top 22px
                    display inline-block


            .menuclose
                display none

.overlay
    // transform: translateX(300px)
    width 100%
    height 100%
    overflow: hidden
    position fixed
    top 0
    right 0
    background rgba(0,0,0,0.5) url('../img/dots.png')

    z-index 9
    display none

.menu
    // transform: translateX(300px)
    width 100%
    height 105px
    overflow: hidden
    position fixed
    top 0
    right 0
    background primary
    z-index 10
    color white
    display block
    opacity .9

    +above(600px)
        height 115px
        display block



    ul
        list-style none
        margin 70px 0 0 0
        padding 0 0 0 padme*2
        white-space nowrap
        +above(600px)
            margin 82px 0 0 0



    li
        padding 10px padme*1.5 0 0
        text-align left
        display inline


        a
            font-size .85em
            text-transform uppercase
            font-weight 500
            color white

            +above(600px)
                font-size 1em

            &:hover
                color slate

            i
                // opacity .6
                display none

                +above(600px)
                    display inline-block




    .navitem
        color white
        float none
        padding 0





img.cftop
    position absolute
    top padme
    left 50%
    width 60px
    margin-left -30px
    transition all .3s ease

    +above(600px)
        top padme*1.5
        width 84px
        margin-left -42px


a, a:visited
    color primary
    font-weight 500
    text-decoration none


#hero
    background url('../img/poly.svg') center
    background-size cover
    min-height fullscreen
    // padding-top 60px
    border-bottom 1px solid #ddd
    +above(600px)
        padding-top 90px


    #herotag
        align(direction = both)
        margin-top 50px
        max-width 1200px
        width 80%
        display block
        background-position 50% 0
        text-align center

        h1

            display block
            line-height 1em
            font-size 300%
            font-weight 900
            text-transform uppercase
            color slate
            margin 0
            padding 0

            +above(900px)
                font-size 5em
                text-align left




        h4
            font-weight 300
            text-decoration none
            text-transform uppercase
            margin 0
            font-size 100%
            display block
            padding-top 10px

            +above(900px)
                font-size 125%
                text-align left


            span
                color primary
                font-weight 700
                white-space nowrap
        p
            font-weight 300
            font-size 1em
            line-height 1.5em
            padding-top 30px
            text-align justify
            color #757575
            max-width 800px

            +above(900px)
                font-size 1.35em
                text-align left

        img.icon
            padding 20px
.top
    margin-top 150px

.bottom
    margin-bottom 150px

.container
    center(1200px)
    padding padme padme*2
    h1
        word-spacing: -0.15em;
        font-weight 200
        text-transform uppercase
        font-size 3em

        span
            color primary

    p
        color #757575

    article
        center(100%)

    .portfolio_item
        padding 2.5% 0

        +between(500px, 899px)
            column(1/2, cycle: 2, gutter: 3.5)
            padding 1.5% 0

        +above(900px)
            column(1/3, cycle: 3, gutter: 2.5)
            padding 1% 0

        img
            max-width 100%
            border-radius 3px

.portfolio_desc
    padding-bottom 100px

    .breadcrumbs
        text-align left
        margin-bottom 40px
        padding padme 0
        text-transform uppercase
        width 100%
        color #90a4ae
        font-weight 700

        a
            font-weight 700

        i.fa-chevron-right
            padding 0 5px

    article
        +above(800px)
            shift(-1/3)
            column(2/3)

        img
            width 100%
            padding-bottom 2%

        div
            col(1/2)

    aside
        padding-bottom 20px
        +above(800px)
            shift(2/3)
            column(1/3)

        h1
            word-spacing: -0.15em;
            font-weight 200
            text-transform uppercase
            font-size 2em
            padding-top 0
            margin-top 0
            margin-bottom 25px

        .tagblock
            color slate
            padding-right 5px
            opacity .5
            font-size 1em
            border-radius 2px

        p
            padding-top 10px

        i
            margin-right 3px


.project_item
    center()
    padding 20px 0

    article
        padding 2 0 6%
        +above(960px)
            column(2/3)

        img
            width 100%
            margin-bottom 20px

    aside
        padding 0% 0 8%
        +above(960px)
            column(1/3)
        h1
            word-spacing: -0.15em;
            font-weight 200
            text-transform uppercase
            font-size 2em
            padding-top 0
            margin-top 0
            margin-bottom 25px

        .tagblock
            padding 3px 5px
            border solid 1px slate
            color slate
            opacity .4
            font-size .8em
            border-radius 2px
            cursor pointer

            &:hover
                opacity 1

.cv
    center(1200px)
    padding padme*2
    padding-bottom 100px

    h1
        word-spacing: -0.15em;
        font-weight 200
        text-transform uppercase
        font-size 3em
        margin 0
        padding 30px 0 0 0

    h2
        word-spacing: -0.15em;
        font-weight 200
        text-transform uppercase
        font-size 2em
        margin 0
        padding 50px 0 0 0


    h3
        word-spacing: -0.15em;
        font-weight 700
        text-transform uppercase
        font-size 1em
        color primary

        i
            padding-right 3px


    h4
        font-size 1.25em;
        word-spacing 0
        font-weight 500
        color #c4c4c4
        margin-top 0
        text-transform uppercase
        display block
        padding-right padme*2

        +above(900px)
            display inline-block

    h5
        font-size 1.5em;
        word-spacing 0
        font-weight 300
        display inline-block
        padding-right padme*2
        margin-bottom 0
        margin-top 14px

    h6
        color #757575
        font-size 1.15em
        font-weight 400
        padding 5px 0 0 0
        margin 0

        i
            padding-left padme*2

    .cvdownload
        float right
        padding 0 10px
        font-size .8em

        a
            color primary
        p
            display inline-block
            paddding-right 10px
            text-transform uppercase
            color primary
        i
            padding-right 5px
            font-size 1.5em
            color primary

    .company
        padding 0
        margin 15px 0

        ul
            margin 0
            padding 0

        li
            padding-left padme
            margin-left 0
            border-left 5px solid primary
            list-style none
            color #757575
            font-size 1.15em
            line-height 1.25em
            margin-bottom 8px
            font-weight 300

    .curriculum
        padding-bottom 10px
        span
            white-space nowrap
            border solid 1px #f2f2f2
            padding 2px 4px
            margin 2px 0
            display inline-block
            font-size .9em
            color #999999


    p
        color #757575
        font-size 1.15em
        line-height 1.5em



    span.details
        display block
        float none
        color #757575
        font-weight 300
        margin-bottom 12px

        +above(900px)
            float right
            display inline-block

        a.phone
            margin 0
            white-space nowrap

            +above(900px)
                margin 0 20px

        a
            color #757575
            padding 6px 0

            &:hover
                color primary
    .skillcontainer
        center()
        padding-top 20px
        div
            column(1/3, cycle:3, gutter: 1)
            padding 5px
            margin-bottom 10px
            border-radius 3px
            border solid 1px #f2f2f2
            // background #f2f2f2
            overflow ellipsis
            color #757575
            font-size 1.15em

            i
                color primary
                padding-right 5px

.about
    background slate
    min-height 100vh
    display block
    position relative
    background slate url('../img/cf_photo_pink.png') no-repeat
    background-position 50% 10%
    background-size auto 50%
    color #90A4AE


    +between(800px, 999px)
        background-position 120% 50%
        background-size auto 70%

    +above(1000px)
        background-position 90% 50%
        background-size auto 70%

    .btn
        height 45px
        background #37474F
        display inline-block
        margin-right 4px
        line-height 45px
        padding 0 20px
        font-size 1em
        text-align center
        border-radius 3px
        transition all .3s ease
        font-weight 600

        &:hover
            background primary
            color white

    section
        center(1200)
        padding-top 50px
        max-width 1200px
        width 80%
        display block
        text-align left

        div.content
            width 100%
            margin-top 200px
            +above(900px)
                width 70%

            h1
                word-spacing: -0.15em;
                font-weight 200
                text-transform uppercase
                font-size 3em
                margin 0
                padding 0 0 20px 0
                color white

            p
                line-height 1.75em

.social a
    width 55px
    height 55px
    background #37474F
    display inline-block
    float left
    margin-right 4px
    margin-top 30px
    margin-bottom 150px
    line-height 55px
    font-size 1.5em
    text-align center
    border-radius 3px
    transition all .3s ease

    &:hover
        color white
        background primary

